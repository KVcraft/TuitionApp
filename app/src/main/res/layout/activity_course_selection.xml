<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Course(s)"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Course Checkboxes -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add your CheckBoxes here -->
            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biology"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combined Maths"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physics"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chemistry"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ICT"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Studies"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Economics"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accounting"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French"/>

            <CheckBox android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English Literature"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Gradient with Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:background="@drawable/bottom_gradient" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/dark_blue"
            android:layout_gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
    </FrameLayout>
</LinearLayout>
