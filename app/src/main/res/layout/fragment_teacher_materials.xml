<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TeacherMaterialsFragment"
    android:background="#FFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Material"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Selection Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload New Material"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Session Selection (Taller Field) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="#3F51B5"
                app:boxStrokeColor="#3F51B5"
                android:minHeight="60dp">

                <AutoCompleteTextView
                    android:id="@+id/sessionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Select Session"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date Selection -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="#3F51B5"
                app:boxStrokeColor="#3F51B5"
                android:minHeight="60dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Select Date"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Time Selection -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="#3F51B5"
                app:boxStrokeColor="#3F51B5"
                android:minHeight="60dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Select Time"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- File Upload Box -->
            <LinearLayout
                android:id="@+id/uploadBox"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#F5F5F5"
                android:layout_marginBottom="16dp"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📁 Tap to select file"
                    android:textSize="16sp"
                    android:textColor="#3F51B5"/>

                <TextView
                    android:id="@+id/fileNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- File Upload Button -->
            <Button
                android:id="@+id/uploadButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Upload Document"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"/>

            <!-- Material Management Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Materials"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Update Button -->
            <Button
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Update Course Material"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Delete Button -->
            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Delete Course Material"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>