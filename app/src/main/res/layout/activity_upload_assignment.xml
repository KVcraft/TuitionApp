<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/blue_gradient"
        android:gravity="center">

        <TextView
            android:text="Upload Assignments"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Scrollable Form -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="0">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Session Name -->
            <EditText
                android:id="@+id/editTextSession"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Session"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- DateTime Picker -->
            <EditText
                android:id="@+id/editTextDateTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Select Date and Time"
                android:focusable="false"
                android:clickable="true"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Assignment Title -->
            <EditText
                android:id="@+id/editTextAssignmentTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Assignment Title"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Open Date -->
            <EditText
                android:id="@+id/editTextOpenDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Select Open Date"
                android:background="@drawable/rounded_edittext"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Due Date -->
            <EditText
                android:id="@+id/editTextDueDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Select Due Date"
                android:background="@drawable/rounded_edittext"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonUpload"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Upload"
                    android:background="@drawable/dark_blue"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonDelete"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:background="@android:color/holo_red_dark"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- List of Assignments -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploaded Assignments"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAssignments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp" />
    <!-- Bottom Gradient Footer (236dp height) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/blue_gradient"
        android:gravity="center" />
</LinearLayout>
